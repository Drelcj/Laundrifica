{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // <-- MADE THIS KEY CHANGE
    "paths": {
      "@/*": ["./src/*"], // <-- MADE THIS KEY CHANGE
      "@/components/*": ["./src/components/*"], // Added this for clarity and robustness if you use @/components
      "@/lib/*": ["./src/lib/*"], // Added this for clarity and robustness
      "@/app/*": ["./src/app/*"] // Added this for clarity and robustness
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}